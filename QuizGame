import java.util.Scanner;
import java.util.ArrayList;
import java.util.Collections;

class QuizGame {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String[] questions = {
            "1. What is the capital of France?",
            "2. Which language is used for Android development?",
            "3. What is the size of int in Java?",
            "4. Who developed Java?",
            "5. Which keyword is used to inherit a class in Java?",
            "6. Which method is the entry point of Java program?",
            "7. Which company owns Java now?",
            "8. Which of these is not a Java feature?",
            "9. What is JVM?",
            "10. Which keyword is used to define a constant in Java?"
        };

        String[][] options = {
            {"A. Berlin", "B. Madrid", "C. Paris", "D. Rome"},
            {"A. Python", "B. Java", "C. C++", "D. Swift"},
            {"A. 2 bytes", "B. 4 bytes", "C. 8 bytes", "D. Depends on system"},
            {"A. Microsoft", "B. Apple", "C. Sun Microsystems", "D. Google"},
            {"A. this", "B. super", "C. extends", "D. implements"},
            {"A. start()", "B. run()", "C. main()", "D. init()"},
            {"A. Oracle", "B. Microsoft", "C. IBM", "D. Intel"},
            {"A. Object-Oriented", "B. Portable", "C. Pointer Support", "D. Secure"},
            {"A. Java Virtual Machine", "B. Java Variable Method", "C. Just Virtual Memory", "D. Joint Virtual Model"},
            {"A. static", "B. final", "C. const", "D. define"}
        };

        char[] answers = {'C', 'B', 'B', 'C', 'C', 'C', 'A', 'C', 'A', 'B'};
        int score = 0;

        System.out.println(" Welcome to the Java Quiz Game!");
        System.out.println("--------------------------------");

        
        ArrayList<Integer> indexList = new ArrayList<>();

        for (int i = 0; i < questions.length; i++) {
            indexList.add(i);
        }

        
        Collections.shuffle(indexList);

        
        for (int index : indexList) {

            System.out.println("\n" + questions[index]);

            for (String option : options[index]) {
                System.out.println(option);
            }

            System.out.print("Your answer (A/B/C/D): ");
            char userAnswer = scanner.next().toUpperCase().charAt(0);

            if (userAnswer == answers[index]) {
                System.out.println("âœ… Correct!");
                score++;
            } else {
                System.out.println("âŒ Wrong! Correct answer is: " + answers[index]);
            }
        }

        System.out.println("\nðŸŽ‰ Quiz Finished!");
        System.out.println("Your Score: " + score + "/" + questions.length);

        scanner.close();
    }
}
